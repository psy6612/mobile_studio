<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.settingFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/setting_switch_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/notice_alarm_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/notosanskrmedium"
                android:freezesText="false"
                android:includeFontPadding="true"
                android:text="\t\t공지사항 알림받기"
                android:textAllCaps="false"
                android:textColorHighlight="#009688"
                android:textIsSelectable="false"
                app:showText="false" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/target_alarm_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:fontFamily="@font/notosanskrmedium"
                android:freezesText="false"
                android:includeFontPadding="true"
                android:text="\t\t목표가 알림받기"
                android:textAllCaps="false"
                android:textColorHighlight="#009688"
                android:textIsSelectable="false"
                app:showText="false" />

            <CheckBox
                android:id="@+id/basic_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrmedium"
                android:freezesText="false"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:button="@null"
                android:text="\t\t거래소 탭을 누르면 기본 거래소로"
                android:textAllCaps="false"
                android:textColorHighlight="#009688"
                android:textIsSelectable="false"
                android:checked="true"/>

            <RelativeLayout
                android:id="@+id/basic_market_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/notosanskrmedium"
                    android:freezesText="false"
                    android:gravity="center_vertical"
                    android:text="\t\t기본거래소 지정"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textColorHighlight="#009688"
                    app:autoSizeTextType="none" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alarm_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/notosanskrmedium"
                    android:freezesText="false"
                    android:gravity="center_vertical"
                    android:text="\t\t공지사항 알림 받을 거래소소"
                   android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textColorHighlight="#009688"
                    app:autoSizeTextType="none" />
            </RelativeLayout>




        </LinearLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>